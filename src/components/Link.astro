---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  primary: "text-white hover:underline focus:underline",
  outline: "text-white hover:underline focus:underline bg-black",
  inverted: "text-black hover:underline focus:underline bg-white",
  muted: "text-black hover:underline focus:underline bg-gray-100 hover:bg-gray-200",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "block w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
